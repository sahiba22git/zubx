}

.post .aviator{

    padding: 10px;

    width: 121px;

    margin: 5px;

}

.post .col-xs-6{

	width: 50%;

	float: left;

}

.post .col-xs-3{

	width: 25%;

	float: left;

}

h3{

    font-size: 18px;

}

